@*
    This class is for Creating & Editing expenses

    & Also the view for the CreateEditExpense method in the Home controller
*@

@model Banking_App._2.Models.Expense

@{
    ViewData["Title"] = "Create / Edit";
}

<div class="text-center">
    <h1 class="display-4">Create or Edit an expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">

    @*
        we use a asp-for to access the properties in the Expense class
    *@
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"/>
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01"/>
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Enter a Description" asp-for="Description" />

    @*
        the type is for accessing the data below the button
    *@
    <button class="btn btn-outline-primary mt-4" type="submit">Ok</button>
</form>


